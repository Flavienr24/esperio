<div class="container">
  <div class="flat-card margin-form">
    <h3 class="title">New Project</h3>
    <%= simple_form_for @project do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :name,
      required: true,
      autofocus: true,
      placeholder: "Give a title to your project",
      input_html: { autocomplete: "Name" }%>
      <%= f.input :description, as: :text,
      required: true,
      autofocus: true,
      placeholder: "Description of your project",
      input_html: { autocomplete: "description" }%>
      <%= f.input :visibility,
      autofocus: true,
      label: "Private",
      input_html: { autocomplete: "true" }%>
    </div>
  </div>
  <!-- Skill search display none -->
  <div class="skills-positions" style="display: none">
    <div class="flat-card margin-form">
      <div class="skills">
        <h3>Skills & Expertises</h3>
        <div class="light-description">Choose expertises needed for project</div>
        <%= f.input :project_tags,
        autofocus: true,
        placeholder: "Separated tags with commas",
        input_html: { autocomplete: "true" }
        %>
        <div>
          <% @project.project_tags.each do |tag| %>
          <div class="tag-expertise">
            <i class="fas fa-bookmark ml-0 mr-2 justify-content-between"></i>
            <%= tag.upcase %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <!-- TEST -->
  <div class="skills-positions">
    <div class="flat-card margin-form">
      <div class="skills">
        <h3>Skills & Expertises</h3>
        <div class="light-description">Choose expertises needed for project</div>
        <div class="d-flex">
          <div class="tags-search">
            <%= f.input :project_tags,
            type: "text",
            placeholder: "Search for names",
            :input_html => {
            :id => "myInput",
            :autocomplete => "off",
            # :onkeyup => "searchList()"
            }
            %>
            <div class="skill-list">
              <!-- Tag expertise bucket -->
              <div class="d-flex flex-wrap">
                <% @project.project_tags.join.split(',').each do |tag| %>
                <div class="tag-expertise">
                  <i class="fas fa-bookmark ml-0 mr-2 justify-content-between"></i>
                  <%= tag.upcase %>
                </div>
                <% end %>
              </div>
              <div class="tag-export">
              </div>
            </div>
            <div class="list-tags-search">
              <ul id="myUL">
                <% User.skill_counts.each do |skill| %>
                <li class="list" style="display: none"><a href="#"><%= skill.name %></a></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
        <div class="end-form margin-form d-flex justify-content-center">
          <div class="btn btn-rounded btn-group-vertical">
            <%= f.button :submit, "Create"%>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
