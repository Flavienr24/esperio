  <div class="flat-card margin-form">
    <h3 class="title">New Project</h3>
    <%= simple_form_for @project do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :name,
      required: true,
      autofocus: true,
      placeholder: "Give a title to your project",
      input_html: { autocomplete: "Name" }%>
      <%= f.input :description, as: :text,
      required: true,
      autofocus: true,
      placeholder: "Description of your project",
      input_html: { autocomplete: "description" }%>
      <%= f.input :visibility,
      autofocus: true,
      label: "Public",
      input_html: { autocomplete: "true" }%>
      <%= f.input :open_to_apply,
      autofocus: true,
      placeholder: "Yes",
      input_html: { autocomplete: "true" }%>
    </div>
  </div>

  <div class="skills-positions">
    <div class="flat-card margin-form">
      <div class="skills">
        <h3>Skills & Expertises</h3>
        <div class="light-description">Choose expertises needed for project</div>
        <%= f.input :project_tags,
        autofocus: true,
        placeholder: "Separated tags with commas",
        input_html: { autocomplete: "true" }
        %>
        <div>
          <% @project.project_tags.each do |tag| %>
          <div class="tag-expertise">
            <i class="fas fa-bookmark ml-0 mr-2 justify-content-between"></i>
            <%= tag.upcase %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

<!-- TEST -->
  <div class="skills-positions">
    <div class="flat-card margin-form">
      <div class="skills">
        <h3>TEST TEST TEST</h3>
        <div class="light-description">Choose expertises needed for project</div>
        <%= f.input :project_tags,
        type: "text",
        placeholder: "Search for names",
        :input_html => {
                :id => "myInput",
                # :onkeyup => "searchList()"
              }
        %>
        <ul id="myUL">
          <% User.skill_counts.each do |skill| %>
           <li class="list" onclick="getSkill()"><a href="#"><%= skill.name %></a></li>
          <% end %>
        </ul>
        <div>
          <% @project.project_tags.each do |tag| %>
          <div class="tag-expertise">
            <i class="fas fa-bookmark ml-0 mr-2 justify-content-between"></i>
            <%= tag.upcase %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- il faut une barre de recherche? -->
  <div class="contributions-positions">
    <div class="flat-card margin-form">
      <div class="contributions">
        <h3>Contributions</h3>
      </div>
    </div>
    </div>   <!-- il faut une barre de recherche -->
    <div class="end-form margin-form">
      <div class="btn-primary">
        <%= f.button :submit, "Create Project"%>
      </div>
    </div>
    <% end %>
  </div>
