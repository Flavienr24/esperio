<!--  Première partie de l'écran -->
<!-- Colonne gauche -->
<div class="col-8 px-0">
  <div class="flat-card my-4 px-4 py-2">
    <!-- Projets -->
    <h3> <%= @project.name %></h3>
    <div class="d-flex w-50 justify-content-between">
      <div class="light-description"><%= @project.created_at.to_formatted_s(:short)  %></div>
      <div class="project-status"><%= @project.status %></div>
    </div>
    <div class="description mt-3">
      <div class="d-flex flex-wrap"><%= @project.description %></div>
    </div>

    <div class="d-flex justify-content-between align-items-center">
      <% if current_user.id == @user.id %>
      <%= link_to 'Edit project', new_project_path(@project), class: 'btn btn-rounded'%>
      <% end %>
    </div>
  </div>
</div>
<!-- Colonne droite -->
<div class="col-4 px-0 pl-3 ">
  <!-- Expertise -->
  <div class="flat-card my-4 px-4 py-2">
    <h3> Project expertises</h3>
    <div class="p-3">
      <div class="expertises-profile">
        <% @project.project_tags.join.split(',').each do |tag| %>
        <div class="tag-expertise">
          <i class="fas fa-bookmark ml-0 mr-2 justify-content-between"></i>
          <%= tag.upcase %>
        </div>
        <% end %>
      </div>

       <div class="d-flex justify-content-between align-items-center">
        <% if current_user.id == @user.id %>
          <%= link_to 'Add Expertise', edit_project_path(@project), class: 'btn btn-rounded'%>
        <% end %>
      </div>
    </div>
  </div>
</div>
<!-- Deuxième partie de l'écran -->
<!-- troisième partie de l'écran - contributions + collaborators + projets d'ativités -->
<div class="d-flex wrapper-profile">
  <!-- Colonne gauche -->
  <div class="col-8 px-0">
    <!-- Contributions -->
    <div class="flat-card my-4 px-4 py-2">
      <h3>Contributions</h3>
      <div class="d-flex w-50 justify-content-between">
        <div class="expertises-profile p-3 d-flex">
          <%= render 'shared/form', project: @project, post: @post %>
        </div>
      </div>
    </div>
  </div>
  <!-- Colonne droite -->
  <div class="col-4 px-0 pl-3 ">
    <!-- Collaboration -->
    <div class="flat-card my-4 px-4 py-2">
      <h3>Collaboration</h3>
      <div class="p-3">
        <% @project.collaborations.each do |element| %>
        <div class="">
          <!-- <%= element.user.avatar %> -->
          <%= element.user.fullname %> <br>
        </div>
        <% end %>
        <div class="d-flex align-items-center">
          <div class="">
          </div>
          <%= link_to ' Add Collaborators', new_project_collaboration_path(@project), class: 'btn btn-rounded'%>
        </div>
      </div>
    </div>
    <!-- <h2>Activities</h2> -->
    <div class="flat-card my-4 px-4 py-2">
      <h3>Activities</h3>
      <%= @project.posts.count%> - posts
      <!--  <p> --><%#= pluralize @project.posts.size, 'post' %><!-- </p> -->
      created : <%= @datetime - @project.created_at %> days ago
      <%#= User.all.tagged_with(@project.project_tags, :any => true).count %>
    </div>
    <!-- Project Activities -->
  </div>
</div>
<!-- quatrième partie de l'écran -->
<div class="d-flex wrapper-profile">
  <!-- Colonne gauche -->
  <div class="col-8 px-0" id="posts">
    <!-- Contributions -->
    <% @project.posts.reverse_each do |post| %>
    <img src="${@user.avatar" alt="avatar">
    <div class="flat-card my-4 px-4 py-2">

      <div class="expertises-profile p-3 d-flex">
        <div class="d-flex w-50 justify-content-between">
          <p> <%= @user.fullname %></p>
          <p><%= @datetime.to_formatted_s(:short) %></p>
          <% if current_user.id == @user.id %>
          <div class="user-status">owner</div>
          <%else %>
          <div class="user-status">research collaborator</div>
          <% end %>
          <div>
            <p> <%= post.content %></p>
          </div>
        </div>

      </div>
    </div>
    <% end %>
  </div>
</div>
