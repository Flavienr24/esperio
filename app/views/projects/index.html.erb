<div>
    <% @projects.each do |project| %>
    <div class="row">
      <div class="col-12 col-md-6 d-flex">
      <h3> <%= project.name %></h3>
      <p>  starting date: <%= project.created_at%> </p>
      <p> statute: <%= project.status %> </p>
      <p><%= project.description %> </p>
      </div>
    </div>
        <div class="row">
          <img src="${@user.avatar" alt="avatar">
          <img src="${@project.collaboration.user.avatar" alt="avatar">
