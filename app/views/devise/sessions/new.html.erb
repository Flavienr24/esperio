<div class="form-wrapper container">
  <div class="flat-card">
    <div class="px-5 mt-5">
      <div class="d-flex justify-content-center pt-4 mb-2"> <h3>New User ?</h3></div>
      <div class="label d-flex text-center">Start to use Feello.ws and collaborate with researcher by creating an account</div>
      <div class="form-actions d-flex justify-content-center pt-3 pb-3">
        <%= link_to "Sign up", new_registration_path(resource_name), class:"btn btn-primary" %>
      </div>
    </div>
  </div>
  <div class="flat-card mt-4">
    <div class="form-container">
      <div class="d-flex justify-content-center pt-4 mb-4"> <h3>Log in to Feellows!</h3> </div>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
        required: false,
        autofocus: true,
        input_html: { autocomplete: "email" } %>
        <%= f.input :password,
        required: false,
        input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="form-actions d-flex justify-content-center">
        <%= f.button :submit, "Log in", class:"btn btn-secondary" %>
      </div>
      <% end %>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class:"d-flex justify-content-center small" %><br />
    </div>
  </div>
</div>
